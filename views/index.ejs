<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To do list</title>
  </head>
  <body>
    <h1>To do list</h1>
    <ul id="taskList">
      <% if (typeof tasks !== 'undefined' && tasks.length > 0) { %> <%
      tasks.forEach((task, index) => { %>
      <li>
        <input
          type="checkbox"
          id="daily-task<%= index %>"
          class="task-checkbox"
          data-index="<%= index %>"
        />
        <label for="daily-task<%= index %>"><%= task %></label>
      </li>
      <% }) %> <% } else { %>
      <li>No tasks for today.</li>
      <% } %>
    </ul>
    <form action="/addTask" method="post">
      <label for="taskToAdd">Enter a new task:</label><br />
      <input type="text" id="taskToAdd" name="taskToAdd" /><br />
      <button id="addTaskButton">Add Task</button>
    </form>
    <script src="/script.js"></script>
  </body>
</html>
