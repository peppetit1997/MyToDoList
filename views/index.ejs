<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To do list</title>
  </head>
  <link rel="stylesheet" type="text/css" href="/styles.css" />
  <body>
    <h1>To do list</h1>
    <h2>Work Tasks</h2>
    <ul>
      <% const workTasks = tasks.filter(task => task.isWork); %> <% if
      (workTasks.length === 0) { %>
      <li>No work tasks</li>
      <% } else { %> <% workTasks.forEach((task, index) => { %>
      <li>
        <input type="checkbox" id="work-task<%= index %>" class="task-checkbox"
        <%= task.completed ? 'checked' : '' %> data-index="<%= index %>" />
        <label
          for="work-task<%= index %>"
          class="<%= task.completed ? 'completed' : '' %>"
          ><%= task.text %>
        </label>
      </li>
      <% }); %> <% } %>
    </ul>

    <h2>Personal Tasks</h2>
    <ul>
      <% const personalTasks = tasks.filter(task => !task.isWork); %> <% if
      (personalTasks.length === 0) { %>
      <li>No personal tasks</li>
      <% } else { %> <% personalTasks.forEach((task, index) => { %>
      <li>
        <input type="checkbox" id="personal-task<%= index %>"
        class="task-checkbox" <%= task.completed ? 'checked' : '' %>
        data-index="<%= index %>" />
        <label
          for="personal-task<%= index %>"
          class="<%= task.completed ? 'completed' : '' %>"
          ><%= task.text %>
        </label>
      </li>
      <% }); %> <% } %>
    </ul>
    <form action="/addTask" method="post">
      <label for="taskToAdd">Enter a new task:</label><br />
      <input type="text" id="taskToAdd" name="taskToAdd" /><br />
      <label for="taskType">Task Type:</label>
      <input type="radio" id="work" name="taskType" value="work" checked />
      <label for="work">Work</label>
      <input type="radio" id="personal" name="taskType" value="personal" />
      <label for="personal">Personal</label><br />
      <button id="addTaskButton">Add Task</button>
    </form>
    <script src="/script.js"></script>
  </body>
</html>
